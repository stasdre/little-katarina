.footer {
    padding: 30px 0 33px 0;
    background: #000000;
    border-top: 1px solid #fff;
    &__container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        @media (--large-viewport) {
            flex-direction: column;
            align-items: flex-start;
            justify-content: flex-start;
        }
    }
    &__nav {
        width: 30%;
        @media (--large-viewport) {
            margin-bottom: 40px;
        }
    }
}
