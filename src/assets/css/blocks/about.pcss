.about {
    padding: 130px 0 100px 0;
    @media (--medium-viewport) {
        padding: 15px 0 60px 0;
    }
    &__container {
        display: flex;
        justify-content: space-between;
        @media (--large-viewport) {
            flex-direction: column;
        }
    }
    &__right {
        position: relative;
        flex: 0 1 55.42%;
        align-self: flex-start;
        @media (--large-viewport) {
            flex: initial;
            width: 100%;
        }
    }
    &__left {
        margin-right: 20px;
        flex: 0 1 38.75%;
        @media (--large-viewport) {
            flex: initial;
            width: 100%;
        }
    }
    &__header {
        font-family: Raleway;
        font-size: 30pr;
        line-height: 135%;
        color: #ffffff;
        margin-bottom: 30px;
        @media (--small-viewport) {
            font-size: 20pr;
        }
    }
    &__text {
        font-size: 20pr;
        line-height: 135%;
        color: #ffffff;
        @media (--small-viewport) {
            font-size: 16pr;
        }
        p {
            padding: 10px 0;
        }
    }
    &__galery {
        position: relative;
        display: flex;
        justify-content: center;
        min-height: 53.3vh;
        @media (--extra-large-viewport) {
            min-height: 60vh;
        }
        picture {
            max-width: 50%;
            overflow: hidden;
            box-shadow: 0px 20px 20px rgba(0, 0, 0, 0.25);
            img {
                display: block;
                object-fit: cover;
                width: 100%;
                height: 100%;
            }
        }
        picture:first-child {
            align-self: flex-end;
            margin-right: 18px;
        }
        picture:nth-child(2) {
            align-self: flex-start;
        }
    }
    &__info {
        position: absolute;
        top: 50%;
        left: 40%;
        padding: 8.4% 3.8% 3.8% 3.8%;
        width: 25.6%;
        background: #d0b38a;
        box-shadow: 0px 20px 20px rgba(0, 0, 0, 0.1);
        &::before {
            content: '';
            position: absolute;
            top: 25px;
            right: 25px;
            display: block;
            @util size(10.93px);
            background: #ffffff;
            border-radius: 50%;
        }
    }
    &__info-top {
        font-family: Raleway;
        font-weight: bold;
        font-size: 30pr;
        line-height: 35pr;
        letter-spacing: 0.05em;
        color: #ffffff;
        margin-bottom: 10px;
    }
    &__info-bottom {
        font-weight: bold;
        font-size: 14pr;
        line-height: 22pr;
        color: #ffffff;
        opacity: 0.7;
    }
}
