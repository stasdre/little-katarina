body.webp .about {
    /* for desktop */
    background: resolve('images/bg/about_bg.webp') center center/cover fixed
            no-repeat,
        linear-gradient(
            94.88deg,
            rgba(1, 1, 1, 0.9) -7.51%,
            rgba(78, 67, 57, 0.09) 58.47%
        );
    @media (--retina-viewport) {
        background: resolve('images/bg/about_bg@2x.webp') center center/cover
                fixed no-repeat,
            linear-gradient(
                94.88deg,
                rgba(1, 1, 1, 0.9) -7.51%,
                rgba(78, 67, 57, 0.09) 58.47%
            );
    }

    /* for tablets */
    @media (--retina-large-viewport) {
        background: resolve('images/bg/about_sm@2x.webp') center center/cover
                no-repeat,
            linear-gradient(
                94.88deg,
                rgba(1, 1, 1, 0.9) -7.51%,
                rgba(78, 67, 57, 0.09) 58.47%
            );
    }
    @media (--large-viewport) {
        background: resolve('images/bg/about_sm.webp') center center/cover
                no-repeat,
            linear-gradient(
                94.88deg,
                rgba(1, 1, 1, 0.9) -7.51%,
                rgba(78, 67, 57, 0.09) 58.47%
            );
    }

    /* for mobile */
    @media (--retina-small-viewport) {
        background: resolve('images/bg/about_xs@2x.webp') center center/cover
                no-repeat,
            linear-gradient(
                94.88deg,
                rgba(1, 1, 1, 0.9) -7.51%,
                rgba(78, 67, 57, 0.09) 58.47%
            );
    }
    @media (--small-viewport) {
        background: resolve('images/bg/about_xs.webp') center center/cover
                no-repeat,
            linear-gradient(
                94.88deg,
                rgba(1, 1, 1, 0.9) -7.51%,
                rgba(78, 67, 57, 0.09) 58.47%
            );
    }
}

