.btn {
    font-family: Raleway;
    font-weight: 500;
    font-size: 32pr;
    line-height: 135%;
    text-align: center;
    letter-spacing: 0.01em;
    text-transform: uppercase;
    color: #244018;
    padding: 21px 78px;
    background: #ffffff;
    box-shadow: 0px 20px 20px rgba(0, 0, 0, 0.3);
    border-radius: 20px;
    @media (--small-viewport) {
        font-size: 20pr;
        padding: 15px 40px;
    }
}
